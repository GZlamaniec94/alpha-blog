<h1>Article listing page</h1>
<style>
table, th, td {
  border: 1px solid black;
}
</style>
<table>
    <thead> 
        <tr>
            <th><strong>Title</strong></th>
            <th><strong>Description</strong></th>
            <th><strong>Actions</strong></th>
        </tr>
    </thead>
    
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td>Placeholder</td>
        </tr>
        <% end %>
    </tbody>

</table>