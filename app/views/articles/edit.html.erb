<body bgcolor = "#C0C0C0">

<h1>Edit article</h1>

<% if @article.errors.any? %>
    <h2>The following errors prevended article from being save</h2>    
    <ul>
        <% @article.errors.full_messages.each do |msg|%>
            <FONT COLOR="#ff0000"><li><%= msg%></li></FONT>
        <% end %>
    </ul>    
<% end %>

<%= form_with(model: @article, local: true) do |f|%>
    <p>
        <strong> <%= f.label :title %></strong><br/>
        <%= f.text_field :title%>
    </p>
    <p>
        <strong><%= f.label :description%></strong><br/>
        <%= f.text_area :description%>
    </p>
    <p>
        <%= f.submit%> |
        <%= link_to "Cancel", articles_path(@articles)%>

    </p>
<%end%>
</body>